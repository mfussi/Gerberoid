			},
			"response": []
		},
		{
			"name": "Move",
			"request": {
				"method": "POST",
				"header": [],
				"url": {
					"raw": "http://{{host}}:6060/api/control/move?x=0&y=80&absolute=false",
					"protocol": "http",
					"host": [
						"{{host}}"
					],
					"port": "6060",
					"path": [
						"api",
						"control",
						"move"
					],
					"query": [
						{
							"key": "x",
							"value": "0",
							"description": "move on x axis, value in pixels"
						},
						{
							"key": "y",
							"value": "80",
							"description": "move on y axis, value in pixels"
						},
						{
							"key": "absolute",
							"value": "false",
							"description": "given coordinates in absolute (true) or relative (false) values"
						}
					]
				},
				"description": "Moves the viewport of the gerber frame. Given x and y coordinates (in pixels). The coordinates can be absolute or relative."
			},
			"response": []
		},
		{
			"name": "Scale",
