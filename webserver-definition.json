		"name": "Gerberoid",
		"description": "A REST Api to remote control the gerberoid app. Load gerber and drill files, move, scale the display. Change visiblities.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Fullscreen",
			"request": {
				"method": "POST",
				"header": [],
				"url": {
					"raw": "http://{{host}}:6060/api/control/fullscreen?enable=true",
					"protocol": "http",
					"host": [
						"{{host}}"
					],
					"port": "6060",
					"path": [
						"api",
						"control",
						"fullscreen"
					],
					"query": [
						{
							"key": "enable",
							"value": "true",
							"description": "true / false"
						}
					]
				},
				"description": "Toggles the fullscreen. enable = true/false"
			},
			"response": []
		},
		{
