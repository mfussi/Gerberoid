<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="se.pp.mc.android.Gerberoid.activities.MainActivity"
    tools:showIn="@layout/activity_main">

    <se.pp.mc.android.Gerberoid.gerber.GerbviewFrame
	android:id="@+id/gerber_viewer"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/gerber_viewer_background" />

	<ImageView
		android:layout_width="64dp"
		android:layout_height="64dp"
		app:tint="@android:color/white"
		android:padding="16dp"
		android:layout_gravity="top|end"
		app:srcCompat="@drawable/ic_baseline_fullscreen_24"
		android:id="@+id/ivFullscreen" />

	<include layout="@layout/layout_fullscreen_progress" />

</FrameLayout>
